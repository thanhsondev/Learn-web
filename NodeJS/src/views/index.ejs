<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Learning space | Kiet's CRUD App</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
  <div class="nav">
    <a class="active" href="/">Home</a>
    <a href="/upload">Upload File</a>
  </div>

  <div class="create-user-container">
    <form action="/create-new-user" method="POST">
      <div><b>Create a new user:</b></div>
      <div>
        <label>First Name: </label>
        <input type="text" name="firstName" />
      </div>
      <div>
        <label>Last Name: </label>
        <input type="text" name="lastName" />
      </div>
      <div>
        <label>Email: </label>
        <input type="email" name="email" />
      </div>
      <div>
        <label>Address: </label>
        <input type="text" name="address" />
      </div>
      <br>
      <div>
        <button class="button" type="submit"><span class="text">Submitting</span><span>...</span>
        </button>
      </div>
    </form>
  </div>

  <hr>

  <div style="padding-left:16px">
    <h2>List of users:</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% for(let i=0; i < dataUser.length; i++) { %>
        <tr>
          <td>
            <%= dataUser[i].id %>
          </td>
          <td>
            <%= dataUser[i].firstName %>
          </td>
          <td>
            <%= dataUser[i].lastName %>
          </td>
          <td>
            <%= dataUser[i].email %>
          </td>
          <td>
            <%= dataUser[i].address %>
          </td>
          <td>
            <form>
              <button class="button" role="button">
                <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">
                  <span class="text">Detail</span><span>User Details</span>
                </a>
              </button>
            </form>
            <form action="/edit/user/<%= dataUser[i].id %>" method="GET">
              <button class="button" role="button">
                <a href="/edit/user/<%= dataUser[i].id %>" target="_blank">
                  <span class="text">Edit Information</span><span>Editing</span>
                </a>
              </button>
            </form>
            <form action="/delete-user" method="POST">
              <button class="button" type="submit">
                <a href="/delete-user/<%= dataUser[i].id %>" target="_blank">
                  <input type="text" hidden value="<%= dataUser[i].id %>" name="userId" />
                  <span class="text">Remove</span><span>Delete Information</span>
                </a>
              </button>
            </form>
          </td>
        </tr>
        <% } %>
          </tr>
      </tbody>
    </table>
  </div>
</body>

</html>